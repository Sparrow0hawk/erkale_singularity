Bootstrap: docker
From: ubuntu:18.04

%files

  compile.sh

%post

apt-get update -y
apt-get -y install gfortran libtool autogen pkg-config autoconf cmake build-essential libatlas-base-dev libgsl0-dev libhdf5-dev libint-dev libxc-dev git wget

ls -l

chmod +x ./compile.sh

./compile.sh

%runscript

exec /erkale/bin/"$@"
